<div class="container header">
    <div class="container">
        <h1 class="display-3 add-items-heading" style="text-align:center;">Add Menu Items</h1>
    </div>
</div>

<div class="container add-menu-item-form">
    <div class="row">
            <form class="form" id="edit-form" method="POST">
                <fieldset class="form-group">
                    <h3>Edit Menu Items</h3>
                    <label for="edit-items">Edit an existing item</label>
                    <select class="custom-select" id="edit-items">
                        <option></option>
                        {{#each menuItems}}
                        <option value={{this.id}} name="id">{{this.name}}</option>
                        {{/each}}
                    </select>
                </fieldset>
                <fieldset class="form-group">
                    <label for="item-name">Menu Item Name:</label>
                    <input type="text" class="form-control" id="item-name" name="name" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="item-description"> Description:</label>
                    <input type="text" class="form-control" id="item-description" name="description" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="item-category"> Category:</label>
                    <input type="text" class="form-control" id="item-category" name="category" required>
                </fieldset>
                <fieldset class="form-group">
                    <label for="item-price"> Price:</label>
                    <input type="text" class="form-control" id="item-price" name="price" required>
                </fieldset>
                <button type="submit" class="btn btn-success btn-menu">Submit</button>
            </form>
    </div>
</div>

<script src="/assets/js/editMenuItem.js"></script>