<div class="container order-header">
    <div class="container">
        <h1 class="display-3 large-text">Your Order:</h1>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                <h4>Menu Item</h4>
            </th>
            <th>
                <h4>Price</h4>
            </th>
            <th>
                <h4>Quantity</h4>
            </th>
            <th>
                <h4>Delete</h4>
            </th>
        </tr>
    </thead>
    <tbody id="menuitems-list"></tbody>
</table>

<br>
<br>
<br> {{!--Order Total--}}
<footer class="footer order-total">
    <div class="container">
        <button id="update-total-button" class="btn btn-primary" role="button">Update Total</button>
        <table class="table">
            <thead class="thead-inverse">
                <tr>
                    <th>
                        <h2>Total:</h2>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">
                        <h4 id="total"></h4>
                    </th>
                    <tr>
            </tbody>
        </table>
    </div>
</footer>

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.js"></script>
{{{{raw-helper}}}}
<script id="menuitems-list-template" type="text/x-handlebars-template">
    {{#each orderableMenuItems}}
        <tr class="menuitem-details">
            <td class="menuitem-name">{{this.name}}</td>
            <td class="menuitem-price">{{this.price}}</td>
            <td><input class="menuitem-quantity" type="number" name="quantity" min="1" max="10"></td>
            <td><button type="button" class="btn btn-danger">Delete</button></td> 
        </tr>
    {{/each}}
</script>
{{{{/raw-helper}}}}
<script src="/js/renderOrder.js"></script>
